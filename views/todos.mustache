<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Todos</h1>
    <form action="/" method="post">
      <input type="text" name="newToDo" placeholder="What else?">
      <button type="submit" name="button">Make it So</button>
    </form>
    <ul>
      {{ #todos }}
        <li>
          {{ #complete }} <del> {{ /complete }}
          {{ text }}
          <form action="/mark-complete/{{ id }}" method="POST">
            <button>Complete</button>
          </form>
        </li>
      {{ /todos }}
    </ul>
  </body>
</html>
